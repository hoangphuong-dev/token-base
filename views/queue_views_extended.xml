<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Extend Queue Token Form View -->
    <record id="view_queue_token_form_extended" model="ir.ui.view">
        <field name="name">queue.token.form.extended</field>
        <field name="model">queue.token</field>
        <field name="inherit_id" ref="hospital_queue_management.view_queue_token_form" />
        <field name="arch" type="xml">
            <!-- Thêm trường service_type và health_check_batch_id -->
            <xpath expr="//field[@name='service_id']" position="after">
                <field name="service_type" />
                <field name="health_check_batch_id"
                    invisible="service_type != 'health_check'"
                    required="service_type == 'health_check'" />
            </xpath>

            <!-- Thêm trường dịch vụ đề xuất -->
            <xpath expr="//field[@name='estimated_wait_time']" position="after">
                <field name="next_recommended_service_id" readonly="1"
                    invisible="not is_parallel" />
            </xpath>
        </field>
    </record>

    <!-- Tạo list view riêng cho model queue.room.reservation -->
    <record id="view_queue_room_reservation_list" model="ir.ui.view">
        <field name="name">queue.room.reservation.list</field>
        <field name="model">queue.room.reservation</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="service_type" />
                <field name="start_time" />
                <field name="end_time" />
                <field name="capacity_percentage" />
            </list>
        </field>
    </record>

    <!-- Tạo form view riêng cho model queue.room.reservation -->
    <record id="view_queue_room_reservation_form" model="ir.ui.view">
        <field name="name">queue.room.reservation.form</field>
        <field name="model">queue.room.reservation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="room_id" options="{'no_create': True}" />
                            <field name="service_type" />
                            <field name="capacity_percentage" />
                        </group>
                        <group>
                            <field name="start_time" />
                            <field name="end_time" />
                            <field name="active" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tạo form view cho queue.room với reservation -->
    <record id="view_queue_room_with_reservation_form" model="ir.ui.view">
        <field name="name">queue.room.with.reservation.form</field>
        <field name="model">queue.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                            <field name="service_id" />
                            <field name="capacity" />
                        </group>
                        <group>
                            <field name="state" />
                            <field name="active" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Lịch Đặt Phòng">
                            <field name="reservation_ids">
                                <list>
                                    <field name="name" />
                                    <field name="start_time" />
                                    <field name="end_time" />
                                    <field name="capacity_percentage" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action cho reservation -->
    <record id="action_queue_room_reservation" model="ir.actions.act_window">
        <field name="name">Đặt Lịch Phòng</field>
        <field name="res_model">queue.room.reservation</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu cho đặt lịch phòng -->
    <menuitem id="menu_queue_room_reservation"
        name="Đặt Lịch Phòng"
        parent="menu_hospital_queue_config"
        action="action_queue_room_reservation"
        sequence="25" />
</odoo>